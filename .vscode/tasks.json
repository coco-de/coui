{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint All Packages",
      "type": "shell",
      "command": "./scripts/lint_all.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Dart Analyze - All",
      "type": "shell",
      "command": "make",
      "args": ["analyze"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        "$dart-analyzer"
      ]
    },
    {
      "label": "DCM Analyze - All",
      "type": "shell",
      "command": "make",
      "args": ["dcm"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Auto-fix Lint Issues",
      "type": "shell",
      "command": "make",
      "args": ["lint-fix"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}